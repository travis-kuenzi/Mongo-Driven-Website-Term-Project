<%- include("super-common-header.ejs", {title: genre.name }) %>

<h1><%= genre.name %></h1>

<form action="<%= genre._id ? '/genre/update/' + genre._id : '/genre/create' %>" method="POST">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= genre.name %>" required>
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= genre.description %></textarea>
    </div>
    <div>
        <label for="history">History:</label>
        <textarea id="history" name="history"><%= genre.history %></textarea>
    </div>
    <div>
        <label for="imageUri">Image URL:</label>
        <input type="text" id="imageUri" name="imageUri" value="<%= genre.imageUri %>">
    </div>
    <div>
        <button type="submit"><%= genre._id ? 'Update' : 'Create' %> Genre</button>
    </div>
</form>