<%- include("super-common-header.ejs", {title:title }) %>


<h1><%- genre.name %></h1>

<% if (genre.location) { %>
    <p><b>Location: </b><%- genre.location %></p>
<% } %>

<% if (genre.description) { %>
    <p><b>Description : </b><%- genre.description %></p>
<% } %>

<% if (genre.history) { %>
    <p><b>History : </b><%- genre.history %></p>
<% } %>

<% if (genre.imageUri) { %>
    <img src="<%= genre.imageUri %>" alt="<%= genre.name %>">
<% } %>


<p></p>
<a href="/genre/update/<%= genre._id %>" class="btn btn-primary">Update this genre (Broken right now)</a>